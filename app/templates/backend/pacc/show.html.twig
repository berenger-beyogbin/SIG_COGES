{% extends 'backend/base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        .form-control {
            height: 2.1rem;
        }
        #btnvoirplus.btn-sm, #btnvoirplus.btn-group-sm>.btn {
            padding: 0px 10px;
        }
    </style>
{% endblock %}
{% block body %}

    <div id="main-wrapper" class="show menu-toggle">
        {{ include('backend/_partials/header.html.twig') }}

        {{ include('backend/_partials/left_sidebar.html.twig') }}

        <div class="content-body">
            <div class="container-fluid">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h5 class="mb-0">DETAILS PACC</h5>
                </div>

                <div class="row">
                    <div class="col-xl-12">
                        <div class="card dz-card">
                            <div class="card-body pt-0">
                                <table class="table table-striped table-responsive">
                                    <tbody>
                                    <tr role="row" class="odd">
                                        <td><strong>Date de début : </strong></td>
                                        <td>{{ pacc.dateDebut|date('d/m/Y') }}</td>
                                        <td><strong>Date de fin : </strong></td>
                                        <td>{{ pacc.dateFin|date('d/m/Y') }}</td>
                                        <td><strong> Télécharger le PACC : </strong></td>
                                        <td><a href="{{ path('app_pacc_download_file', {id: pacc.id}) }}" target="_self">{{ pacc.nomFichier }}</a></td>

                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-12">
                        <div class="card dz-card" id="custom-tab">
                            <div class="tab-content" id="myTabContent1">
                                <div class="tab-pane fade show active" id="DefaultTab1" role="tabpanel" aria-labelledby="home-tab1">
                                    <div class="card-body pt-0">
                                        <!-- Nav tabs -->
                                        <div class="custom-tab-1">
                                            <ul class="nav nav-tabs" role="tablist">
                                                <li class="nav-item" role="presentation">
                                                    <a class="nav-link active" data-bs-toggle="tab" href="#recettes" aria-selected="true" role="tab"><i class="la la-box-open me-2"></i> Recettes</a>
                                                </li>
                                                <li class="nav-item" role="presentation">
                                                    <a class="nav-link" data-bs-toggle="tab" href="#depenses" aria-selected="false" tabindex="-1" role="tab"><i class="la la-money-bill me-2"></i> Dépenses</a>
                                                </li>
                                            </ul>
                                            <div class="tab-content">
                                                <div class="tab-pane fade show active" id="recettes" role="tabpanel">
                                                    <div class="row mt-5">
                                                        <div class="col-sm-6">
                                                            <select id="source" class="default-select form-control wide">
                                                                <option selected="">Choisir la source...</option>
                                                                {% set dernier = '' %}
                                                                {% for source in sources %}
                                                                    {% if source.libelleSource != 'Autres' %}
                                                                        <option value="{{ source.id }}">{{ source.libelleSource }}</option>
                                                                    {% else %}
                                                                        {% set dernier = source %}
                                                                    {% endif %}
                                                                {% endfor %}
                                                                <option value="{{ dernier.id }}">{{ dernier.libelleSource }}</option>
                                                            </select>
                                                        </div>
                                                        <div class="col-sm-3 mt-2 mt-sm-0">
                                                            <input type="number" id="montant_recette" class="form-control" placeholder="Montant" name="Montant de la dépense">
                                                        </div>
                                                        <div class="col-sm-2 mt-2 mt-sm-0">
                                                            <button class="btn btn-warning btn-sm w-10" id="saveRecette"><i class="fa fa-plus"> Enregistrer</i></button>
                                                        </div>
                                                    </div>
                                                    <div class="row" id="recette-table">
                                                       {{ include('/backend/recettes/table_ajax.html.twig', { 'recettes': recettes , 'total_recettes': total_recettes }) }}
                                                    </div>
                                                </div>
                                                <div class="tab-pane fade" id="depenses" role="tabpanel">
                                                    <div class="row mt-5">
                                                        <div class="col-sm-3">
                                                            <select id="chapitre" class="default-select form-control wide">
                                                                <option selected="">Choisir le chapitre...</option>
                                                                {% for chapitre in chapitres %}
                                                                   <option value="{{ chapitre.id }}">{{ chapitre.libelleChapitre }}</option>
                                                                {% endfor %}
                                                            </select>
                                                        </div>
                                                        <div class="col-sm-3">
                                                            <select id="activite" class="default-select form-control wide">
                                                                <option selected="">Choisir l'activité ...</option>
                                                                {% for activite in activites %}
                                                                    <option value="{{ activite.id }}">{{ activite.libelleActivite }}</option>
                                                                {% endfor %}
                                                            </select>
                                                        </div>
                                                        <div class="col-sm-3 mt-2 mt-sm-0">
                                                            <input type="number" id="montant_depense" class="form-control" placeholder="Montant" name="Montant de la dépense">
                                                        </div>
                                                        <div class="col-sm-2 mt-2 mt-sm-0">
                                                            <button class="btn btn-warning btn-sm w-10" id="saveDepense"><i class="fa fa-plus"> Enregistrer</i></button>
                                                        </div>
                                                    </div>
                                                    <div class="row" id="depense-table">
                                                        {{ include('/backend/depenses/table_ajax.html.twig', { 'depenses': depenses , 'total_depenses': total_depenses }) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{ include("backend/_partials/footer.html.twig") }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function () {
            $("#saveRecette").click(function(){
                $.post("{{ path('app_recette_new') }}", {'source': $("#source").val(), 'montant':$("#montant").val(),'pacc': {{ pacc.id }} }, function(response){
                    // console.log(response);
                    if(response.duplicate !== 'undefined') {
                        Swal.fire({
                            position: "center",
                            icon: "success",
                            title: "Attention! un montant a déja été enregistré pour cette recette.",
                            showConfirmButton: true,
                        }).then(function(){
                            window.location.reload();
                        });
                     //   window.location.reload();
                    }
                    $('#recette-table').html(response);
                });
            });

            $("#saveDepense").click(function(){
                $.post("{{ path('app_depense_new') }}", {'activite': $("#activite").val(),'pacc': {{ pacc.id }} }, function(response){
                    // console.log(response);
                    if(response.duplicate !== 'undefined') {
                        Swal.fire({
                            position: "center",
                            icon: "success",
                            title: "Attention! un montant a déja été enregistré pour cette dépense.",
                            showConfirmButton: true,
                        }).then(function(){
                            window.location.reload();
                        });
                        //   window.location.reload();
                    }
                    $('#depense-table').html(response);
                });
            });

            $('.delete-depense').click(function(){
                var id = $(this).data('depense-id');
                $.post('/admin/depense/' + id, {'id': id}, function(response){

                    if(response.result === 'success'){
                        Swal.fire({
                            position: "center",
                            icon: "success",
                            title: "Enregistrement supprimé",
                            showConfirmButton: true,
                        }).then(function(){
                            window.location.reload();
                        });
                    }
                });
            });

            $('.delete-recette').click(function(){
                var id = $(this).data('depense-id');
                $.post('/admin/recette/' + id, {'id': id}, function(response){
                    if(response.result === 'success'){
                        Swal.fire({
                            position: "center",
                            icon: "success",
                            title: "Enregistrement supprimé",
                            showConfirmButton: true,
                        }).then(function(){
                            window.location.reload();
                        });
                    }
                });
            });

            $('#chapitre').change(function(){
                $.get('/admin/chapitre/' + $(this).val()+ '/activites/', function(response){
                    if(response.result === 'success'){
                        $('#activite').val('response.val')
                    }
                });
            })
        });
    </script>
{% endblock %}
