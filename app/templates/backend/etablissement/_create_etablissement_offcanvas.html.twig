<div class="offcanvas offcanvas-end customeoff" tabindex="-1" id="offcanvasCreateEtablissement">
    <div class="offcanvas-header">
        <h5 class="modal-title" id="#gridSystemModal1">Enregistrer un COGES</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close">
            <i class="fa-solid fa-xmark"></i>
        </button>
    </div>
    <div class="offcanvas-body">
        <div class="container-fluid">
            <form id="formCreateEtablissement" method="post" action="{{ path('app_etablissement_new_ajax') }}">
                <div class="row">
                    <div class="col-xl-6 mb-3">
                        <label for="nom" class="form-label">Nom<span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="nom">
                    </div>
                    <div class="col-xl-6 mb-3">
                        <label for="localite" class="form-label">Localité<span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="localite">
                    </div>
                    <div class="col-xl-6 mb-3">
                        <label for="type_milieu" class="form-label">Type milieu<span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="type_milieu">
                    </div>
                    <div class="col-xl-6 mb-3">
                        <label for="cycle" class="form-label">Cycle<span class="text-danger">*</span></label>
                        <select type="text" class="form-control select2" name="cycle">
                            <option value="1">Primaire</option>
                            <option value="2">Secondaire</option>
                        </select>
                    </div>
                    <div class="col-xl-6 mb-3">
                        <label for="code_ets" class="form-label">Code établissement<span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="code_ets">
                    </div>
                    <div class="col-xl-6 mb-3">
                        <label for="iepp_id" class="form-label">IEPP<span class="text-danger">*</span></label>
                        <select type="text" class="form-control select2" name="iepp_id">
                            {% for iepp in iepps %}
                                <option value="{{ iepp.id }}">{{ iepp.libelle }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-xl-6 mb-3">
                        <label for="coges_id" class="form-label">DREN<span class="text-danger">*</span></label>
                        <select type="text" class="form-control select2 filter" id="coges_id" name="coges_id">
                            {% for coge in coges %}
                                <option value="{{ coge.id }}">{{ coge.libelle }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-xl-6 mb-3">
                        <label for="dren_id" class="form-label">DREN<span class="text-danger">*</span></label>
                        <select type="text" class="form-control select2" name="dren_id">
                            {% for dren in drens %}
                                <option value="{{ dren.id }}">{{ dren.libelle }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary me-1" id="btnCreateMandatCoges" data-bs-dismiss="offcanvas">Enregister</button>
                    <button class="btn btn-info light ms-1" id="btnCancel"  data-bs-dismiss="offcanvas">Annuler</button>
                </div>
            </form>
        </div>
    </div>
</div>
