<div class="offcanvas offcanvas-end customeoff" tabindex="-1" id="offcanvasCreateIepp">
    <div class="offcanvas-header">
        <h5 class="modal-title" id="#gridSystemModal1">Enregistrer IEPP</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close">
            <i class="fa-solid fa-xmark"></i>
        </button>
    </div>
    <div class="offcanvas-body">
        <div class="container-fluid">
            <form id="formCreateIepp" method="post" action="{{ path('app_iepp_new_ajax') }}">
                <div class="row">
                    <div class="col-xl-6 mb-3">
                        <label for="libelle" class="form-label">Libellé<span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="libelle">
                    </div>
                    <div class="col-xl-6 mb-3">
                        <label for="email" class="form-label">Email<span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="email">
                    </div>
                    <div class="col-xl-6 mb-3">
                        <label for="telephone" class="form-label">Téléphone<span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="telephone">
                    </div>
                    <div class="col-xl-6 mb-3">
                        <label for="dren_id" class="form-label">DREN<span class="text-danger">*</span></label>
                        <select type="text" class="form-control" name="dren_id">
                            <option value="" selected></option>
                            {% for dren in drens %}
                                <option value="{{ dren.id }}">{{ dren.libelle }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary me-1" id="btnCreateIepp" data-bs-dismiss="offcanvas">Enregister</button>
                    <button class="btn btn-info light ms-1" id="btnCancel"  data-bs-dismiss="offcanvas">Annuler</button>
                </div>
            </form>
        </div>
    </div>
</div>
